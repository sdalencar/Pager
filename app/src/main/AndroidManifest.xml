<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sdainfo.pager">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icone"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_icone"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pager">
        <activity
            android:name=".act.ConfiguracoesActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".act.PrincipalActivity"/>
        <activity
            android:name=".act.PrincipalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".act.CadastrarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".act.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>